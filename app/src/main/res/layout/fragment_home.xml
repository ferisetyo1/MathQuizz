<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai, "
                android:textColor="@color/colorBlueLab"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/nama_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anonymous"
                android:textColor="@color/colorBlueLab"
                android:textSize="24sp"
                android:maxLength="20"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_ganti_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:tint="@color/colorBlueLab"
                android:elevation="10dp"
                app:srcCompat="@drawable/ic_edit_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/logo"
                android:tint="@color/colorBlueLab"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Math Quizz"
                android:textAlignment="center"
                android:textColor="@color/colorBlueLab"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:text="Silahkan pelajari materi dengan menekan tombol mulai latihan dan memulai quiz dengan menekan tombol mulai quiz"
                android:textAlignment="center"
                android:textColor="@color/colorBlueLab"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/solidcorner"
                android:text="Baca Materi"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_latihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/solidcorner"
                android:text="Mulai Latihan"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/solidcorner"
                android:text="Mulai Quizz"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>