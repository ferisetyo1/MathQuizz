<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modul.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/logo"
            android:tint="@color/colorSkyBlue1"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Math Quizz"
            android:textAlignment="center"
            android:textColor="@color/colorSkyBlue1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="Silahkan pelajari materi dengan menekan tombol mulai latihan dan memulai quiz dengan menekan tombol mulai quiz"
            android:textAlignment="center"
            android:textColor="@color/colorSkyBlue1"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/solidcorner"
            android:text="Mulai Quizz"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_latihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solidcorner"
            android:text="Mulai Latihan"
            android:textColor="@android:color/white" />

    </LinearLayout>
</FrameLayout>